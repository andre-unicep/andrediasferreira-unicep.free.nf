<script>
    function menuAction() {
        var x = document.getElementById("menu-master");
        if (x.className === "top-nav") {
            x.className += " responsive";
        } else {
            x.className = "top-nav";
        }
    }
    function hideMenu() {
        document.getElementById("menu-master").className = "top-nav";
    }
</script>

